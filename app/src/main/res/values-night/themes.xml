<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Notes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="mainBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewStyleContent">
        <item name="android:textColor">#CEFFFFFF</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:backgroundTint">#1e1e1e</item>
    </style>

    <style name="tagCardStyle">
        <item name="android:backgroundTint" />
    </style>

    <style name="tagListStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="tagListTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="popupViewStyle">
        <item name="android:backgroundTint">#393939</item>
    </style>

    <style name="iconStyle">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="floatingActionStyle">
        <item name="tint">#000000</item>
        <item name="android:backgroundTint">#BFBFBF</item>
    </style>

    <style name="noteItemStyle">
        <item name="android:backgroundTint">#272727</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundTint">#1e1e1e</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomSpinner">
        <item name="android:popupBackground">@drawable/spinner_background_black</item>
    </style>

    <style name="appIconStyle">
        <item name="android:src">@mipmap/ic_launcher_round</item>
    </style>

    <style name="dividerStyle">
        <item name="android:background">#616161</item>
    </style>

</resources>