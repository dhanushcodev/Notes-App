<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Notes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
<!--        <item name="android:statusBarColor">#F3F4F6</item>-->
    </style>

    <style name="Theme.Notes" parent="Base.Theme.Notes" />
    <style name="mainBackground">
        <item name="android:background">#F3F4F6</item>
    </style>
    <style name="textViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="noteContentTextStyle">
        <item name="android:textColor">#565c4d</item>
    </style>
    <style name="cardViewStyle">
        <item name="android:backgroundTint">#E4E5E9</item>
    </style>
    <style name="iconStyle">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="floatingActionStyle">
        <item name="android:src">@drawable/ic_add_black</item>
        <item name="android:backgroundTint">#E4E5E9</item>
    </style>

    <style name="noteItemStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundTint">#E4E5E9</item>
    </style>
    <style name="CustomAlertDialogTheme" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>