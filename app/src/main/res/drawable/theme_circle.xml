<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"><!-- Background color -->
            <stroke
                android:width="4dp"
                android:color="@android:color/holo_blue_bright"/> <!-- Default border color -->
        </shape>
    </item>
    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray"/><!-- Main card color -->
        </shape>
    </item>
</layer-list>
